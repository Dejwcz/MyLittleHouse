@model IEnumerable<UserDto>

@{
    ViewData["Title"] = Localizer["UsersList"];
}

<h2>@Localizer["UsersList"]</h2>
<div class="table-responsive">
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Localizer["Email"]</th>
            <th>@Localizer["EmailConfirmed"]</th>
            <th>@Localizer["FirstName"]</th>
            <th>@Localizer["LastName"]</th>
            <th>@Localizer["PhoneNumber"]</th>
            <th>@Localizer["LockoutEnabled"]</th>
            <th>@Localizer["LockoutEnd"]</th>
            <th>@Localizer["CreatedAt"]</th>
            <th>@Localizer["UpdatedAt"]</th>
            <th>@Localizer["LastLogin"]</th>
            <th>@Localizer["IsDeleted"]</th>
            <th>@Localizer["DeletedAt"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <input type="checkbox" disabled="disabled" @(user.EmailConfirmed ? "checked" : "") />
                </td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <input type="checkbox" disabled="disabled" @(user.LockoutEnabled ? "checked" : "") />
                </td>
                <td>@user.LockoutEnd?.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@user.UpdatedAt?.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@user.LastLogin?.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <input type="checkbox" disabled="disabled" @(user.IsDeleted ? "checked" : "") />
                </td>
                <td>@user.DeletedAt?.ToString("dd.MM.yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
</div>
<a asp-action="Index" asp-controller="Admin" class="btn btn-secondary text-center mt-4">@Localizer["Back"]</a>