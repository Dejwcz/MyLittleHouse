@removeTagHelper Microsoft.AspNetCore.Mvc.TagHelpers.OptionTagHelper, Microsoft.AspNetCore.Mvc.TagHelpers
@* because issue with languageSelector *@
<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Localizer["IndexTitle"]@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/scss/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MujDomecek.styles.css" asp-append-version="true" />
    @await Html.PartialAsync("_Favicons")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["MyLittleHouse"]</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Info">@Localizer["Info"]</a>
                        </li>
                            @if(User.Identity.IsAuthenticated) {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Properties" asp-action="Index">@Localizer["Properties"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Units" asp-action="Index">@Localizer["Units"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Repairs" asp-action="Index">@Localizer["Repairs"]</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between">
        <span>&copy; 2025 - @Localizer["MyLittleHouse"] - <a asp-area="" asp-controller="Home" asp-action="Info" class="text-dark">@Localizer["Info"]</a></span>
        @{
            var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;

            var selectedEn = (currentCulture == "en") ? "selected" : "";
            var selectedCs = (currentCulture == "cs") ? "selected" : "";
        }
        <div>
            <select id="languageSelector" class="form-select form-select-sm m-2 bg-secondary border border-2 border-primary rounded-2" style="width: auto;" onchange="changeLanguage(this.value)">
            <option value="en" @selectedEn>English</option>
            <option value="cs" @selectedCs>Čeština</option>
            </select>
        </div>
    </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Language change *@
    <script>
        function changeLanguage(culture) {
            // Save actual URL including query string
            var returnUrl = encodeURIComponent(window.location.pathname + window.location.search);
            // Redirection to action
            window.location.href = '/Home/SetLanguage?culture=' + culture + '&returnUrl=' + returnUrl;
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
