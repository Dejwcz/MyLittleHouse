@model MujDomecek.DTO.UnitDto

@{
    ViewData["Title"] = Localizer["Delete"];
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["DeleteAreYouSure"]</h3>
<div>
    <h4>@Localizer["Unit"] - @Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["Name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.Description)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.UnitType)]
        </dt>
        <dd class = "col-sm-10">
            @Localizer[Model.UnitType.ToString()]
        </dd>
        <dt class = "col-sm-2">
            @Localizer["ParentUnit"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentUnitId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@Localizer["Delete"] class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
    </form>
</div>
