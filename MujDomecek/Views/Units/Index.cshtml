@model IEnumerable<MujDomecek.DTO.UnitDto>

@{
    ViewData["Title"] = @Localizer["Units"];
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">@Localizer["Units"]</h1>
    <a asp-action="Create" class="btn btn-primary btn-lg">@Localizer["CreateNewUnit"]</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer["Name"]
            </th>
            <th>
                @Localizer["Description"]
            </th>
            <th>
                @Localizer["UnitType"]
            </th>
            <th>
                @Localizer["ParentUnit"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="FullView" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Localizer[item.UnitType.ToString()]    
            </td>
            <td>
                <a asp-action="FullView" asp-route-id="@item.ParentUnitId">@Html.DisplayFor(modelItem => item.ParentUnitName)</a>
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info m-1">@Localizer["Details"]</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-1">@Localizer["Edit"]</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-1">@Localizer["Delete"]</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
